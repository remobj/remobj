{
  "tasks": {
    "bench": "deno run --allow-read deno.ts",
    "bench:verbose": "deno run --allow-read --v8-flags=--trace-opt,--trace-deopt deno.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "lib": ["deno.window", "dom"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "require-await"]
    }
  }
}