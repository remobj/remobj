{
  "name": "remobj",
  "version": "0.1.0",
  "description": "A modern monorepo library scaffolding based on Vue.js patterns",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky && node scripts/setup-hooks.js",
    "build": "node scripts/build.js",
    "build:watch": "node scripts/build.js --watch",
    "dev": "node scripts/build.js --dev",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "typecheck:build": "tsc -p tsconfig.build.json --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxlint --fix",
    "format:check": "oxlint --dry-run",
    "release": "node scripts/release.js",
    "clean": "node scripts/clean.js",
    "docs:generate": "typedoc && node scripts/generate-vitepress-config.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:full": "npm run build && npm run docs:generate && npm run docs:build",
    "bench": "npm run build && cd benchmark && npm start",
    "benchmark": "npm run bench",
    "bench:ci": "npm run build && cd benchmark && npm start",
    "demo": "node demo/server.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "enquirer": "^2.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "oxlint": "^1.12.0",
    "rimraf": "^6.0.1",
    "rolldown": "1.0.0-beta.30",
    "rolldown-plugin-dts": "^0.15.7",
    "semver": "^7.7.2",
    "tsx": "^4.20.4",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "vitepress": "2.0.0-alpha.9",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remobj/remobj.git"
  },
  "bugs": {
    "url": "https://github.com/remobj/remobj/issues"
  },
  "homepage": "https://github.com/remobj/remobj#readme",
  "author": "RemObj Contributors"
}