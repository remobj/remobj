{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "composite": false
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src/**/*"
  ],
  "exclude": [
    "**/__tests__",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}