{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2022",
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "composite": true,
    "skipLibCheck": true,
    "paths": {
      "@remobj/shared": ["packages/shared/src"],
      "@remobj/web": ["packages/web/src"],
      "@remobj/node": ["packages/node/src"],
      "@remobj/core": ["packages/core/src"],
      "@remobj/weakbimap": ["packages/weakbimap/src"]
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src/**/*",
    "packages/*/__tests__/**/*",
    "scripts/*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}